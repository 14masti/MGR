/***********************************js************************************/

function addPassenger() {
    var table = document.querySelector("#tablelevels");
    var rowCount = table.rows.length;

    if (rowCount <= 4) {
      var row = table.insertRow(rowCount);
      
      var cell1 = row.insertCell(0);
      cell1.innerHTML = rowCount;
    
      var cell2 = row.insertCell(1);
      cell2.innerHTML = '<input type="text" placeholder="Enter name">';
    
      var cell3 = row.insertCell(2);
      cell3.innerHTML = '<input type="text" placeholder="Enter age">';
    
      var cell4 = row.insertCell(3);
      cell4.innerHTML = '<select required><option value="">Choose option</option><option value="male">male</option><option value="female">female</option><option value="transgender">transgender</option></select>';
    
      var cell5 = row.insertCell(4);
      cell5.innerHTML = '<button type="button" class="cancel-button" onclick="removePassenger(this)">Cancel</button>';
    } else {
      alert("You can add a maximum of 4 passengers.");
    }
  }

  function removePassenger(button) {
    var row = button.parentNode.parentNode;
    row.parentNode.removeChild(row);
  }

  function validateForm() {
    var table = document.getElementById("tablelevels");
  var rows = table.getElementsByTagName("tr");

  for (var rowIndex = 1; rowIndex < rows.length; rowIndex++) {
    var nameInput = rows[rowIndex].querySelector("input[type='text']");
    var ageInput = rows[rowIndex].querySelector("input[type='text']");
    var name = nameInput.value.trim();
    var age = parseInt(ageInput.value);

    if (name === "") {
      alert("Please enter name for all passengers.");
      return false;
    }

    var nameRegex = /^[A-Za-z]+$/;
    if (!nameRegex.test(name)) {
      alert("Names can only contain alphabets (A-Z or a-z).");
      return false;
    }

    if (isNaN(age) || age < 1 || age > 100) {
      alert("Age should be a number between 1 and 100 for all passengers.");
      return false;
    }
  }

  return true;
  }


  document.getElementById("bookingForm").addEventListener("submit", function(event) {
    event.preventDefault();
    if (validateForm()) {
        alert("Ticket booked successfully!");
        // Assuming you have implemented the following functions:
        // displayDataAsJSON();
        // resetPage();
      }
  });
